<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:foreground="@drawable/ripple"
        android:background="@drawable/border_one">


        <TextView
            android:id="@+id/company_or_college_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/title_background"
            android:padding="5dp"
            android:text="PURPLE WORLD TECHNOLOGY"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="20dp"
                android:padding="1.5dp"
                android:layout_gravity="center"
                android:src="@drawable/jobtitleoutline"/>
            <TextView
                android:id="@+id/role_tv"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile App Developer / Web Developer"
                android:layout_marginLeft="5dp"

                android:layout_gravity="center"
                android:paddingRight="3dp"

                android:textSize="14dp"


                />



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/calendaroutline"/>

            <TextView
                android:id="@+id/interview_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02/05/2022"
                android:layout_marginLeft="5dp"

                android:layout_gravity="center"
                android:paddingRight="3dp"

                android:textSize="14dp"
                android:textColor="@color/black"

                />

        </LinearLayout>







        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/personoutline"/>

            <TextView
                android:id="@+id/eligibility_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MCA/BE.CSE"
                android:layout_marginLeft="5dp"

                android:layout_gravity="center"
                android:paddingRight="3dp"

                android:textSize="14dp"
                android:textColor="@color/black"

                />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/locationoutline"/>

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KIT-KALAIGNARKARUNANIDHI INSTITUTE OF TECHNOLOGY, Coimbatore, TamilNadu, India - 641 402."
                android:layout_marginLeft="5dp"

                android:layout_gravity="center"
                android:paddingRight="3dp"

                android:textSize="14dp"
                android:textColor="@color/black"

                />

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
