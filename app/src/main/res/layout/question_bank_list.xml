<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_one"
        android:foreground="@drawable/ripple"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"

                android:src="@drawable/pdfoutline">

            </ImageView>

        </LinearLayout>


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"

            android:orientation="vertical"
            android:padding="7dp">


            <TextView
                android:id="@+id/subjec_name"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="3dp"
                android:text="System Software"
                android:textColor="@color/black"


                android:textSize="14dp" />


            <TextView
                android:id="@+id/month_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:paddingRight="3dp"
                android:text="Year : 2020"

                android:textColor="@color/black"
                android:textSize="14dp"

                />


            <TextView
                android:id="@+id/subjec_code"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"

                android:paddingRight="3dp"
                android:text="Type : AU/Internal/other "
                android:textColor="@color/black"
                android:textSize="14dp"

                />
            <TextView
                android:id="@+id/file_name_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"

                android:paddingRight="3dp"
                android:text="Type : AU/Internal/other "
                android:textColor="@color/black"
                android:textSize="14dp"

                />





        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/download_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"

                android:src="@drawable/downloadoutline">

            </ImageView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
